{
  "name": "ts-boilerplate",
  "version": "0.1.0-alpha",
  "description": "A comprehensive TypeScript NodeJs Boilerplate",
  "license": "SEE LICENSE IN LICENSE",
  "author": "[YOUR_NAME] <https://github.com/[YOUR_GITHUB_USERNAME]>",
  "main": "dist/cjs/index.js",
  "type": "module",
  "types": "dist/esm/index.d.ts",
  "module": "dist/esm/index.js",
  "scripts": {
    "build": "npx concurrently 'npm run build:cjs' 'npm run build:esm'",
    "build:cjs": "npx tsc -p tsconfig.cjs.json",
    "build:esm": "npx tsc -p tsconfig.esm.json",
    "test": "npm run test:jest",
    "test:jest": "npx jest --coverage",
    "docify": "npm run docify:typedoc",
    "docify:typedoc": "npx typedoc --entryPointStrategy expand src --out docs",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test && npm run docify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/[YOUR_GITHUB_USERNAME]/[YOUR_GITHUB_REPO_NAME].git"
  },
  "homepage": "https://github.com/[YOUR_GITHUB_USERNAME]/[YOUR_GITHUB_REPO_NAME]#readme",
  "bugs": {
    "url": "https://github.com/[YOUR_GITHUB_USERNAME]/[YOUR_GITHUB_REPO_NAME]/issues"
  },
  "keywords": [
    "typescript"
  ],
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/esm/index.d.ts"
    }
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "files": [
    "dist",
    "tests",
    "README.md"
  ],
  "dependencies": {
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/events": "^3.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.7.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typedoc": "^0.26.10",
    "typescript": "^5.6.3"
  }
}
